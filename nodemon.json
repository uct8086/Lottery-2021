{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/",
        "doc/",
        "public/",
        "test/"
    ],
    "verbose": true,
    "execMap": {
        "js": "node"
    },
    "watch": [
        "server/",
        "app.js"
    ],
    "env": {
        "NODE_ENV": "local"
    },
    "ext": "js, json"
}